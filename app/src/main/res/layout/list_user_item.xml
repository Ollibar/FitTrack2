<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tV_Name"
        android:layout_width="81dp"
        android:layout_height="53dp"
        android:layout_alignBottom="@+id/tV_Alter"
        android:layout_alignParentStart="true"
        android:layout_marginStart="68dp"
        android:layout_weight="1"
        android:fontFamily="casual"
        android:text="@string/userNameListView"
        android:textAlignment="center"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tV_Alter"
        android:layout_width="76dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="142dp"
        android:layout_marginTop="36dp"
        android:layout_weight="1"
        android:fontFamily="casual"
        android:text="@string/userAlterListView"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tV_Gewicht"
        android:layout_width="79dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/tV_Name"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="38dp"
        android:layout_weight="1"
        android:fontFamily="casual"
        android:text="@string/userGewichtListView"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tV_userID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tV_Gewicht"
        android:layout_alignParentStart="true"
        android:layout_marginStart="42dp"
        android:text="@string/userIDTextView"
        android:textStyle="bold" />

</RelativeLayout>