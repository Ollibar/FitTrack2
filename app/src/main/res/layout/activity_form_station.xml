    <Spinner
        android:id="@+id/stationspinner"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:entries="@array/station_typ"
        android:entryValues="@array/station_typ_value" />

    <Button
        android:id="@+id/button4"
