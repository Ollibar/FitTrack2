<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/editText_Datum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        tools:text="Datum" />

    <EditText
        android:id="@+id/editText_beschreibung"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Beschreibung" />

    <Spinner
        android:id="@+id/spinner_user"
        android:layout_width="match_parent"
        android:layout_height="41dp" />

    <Spinner
        android:id="@+id/spinner_station"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <EditText
        android:id="@+id/editText_dauer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Dauer" />

    <EditText
        android:id="@+id/editText_speed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Geschwindigkeit" />

    <Button
        android:id="@+id/button7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Training Speichern" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sätze: " />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="125dp" />

    <Button
        android:id="@+id/button8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Satz hinzufügen" />


</LinearLayout>