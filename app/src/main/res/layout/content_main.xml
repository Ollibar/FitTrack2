<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/arnold" />

    <Button
        android:id="@+id/testUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Testuser into DB"
        android:onClick="erzeugeTestNutzer"/>

    <Button
        android:id="@+id/testStation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Teststation into DB"
        android:onClick="erzeugeTestStation"/>

</LinearLayout>